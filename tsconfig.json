{
  "compilerOptions": {
    "module": "amd",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2016",
      "es2018"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "downlevelIteration": true,
    "target": "es5",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
